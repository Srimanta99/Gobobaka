                android:id="@+id/register2_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green_logo"
                android:text="Next" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
